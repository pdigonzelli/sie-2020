DEFINE BUFFER TB FOR TAMBORES_INDUSTRIA.
FIND LAST  tambores_industria WHERE id_articulo = 952 NO-LOCK.
  DISP ID_LOTE FECHA ID_TAMBOR.
FOR EACH LOTES_JUGO WHERE LOTES_JUGO.ID_LOTE = TAMBORES_INDUSTRIA.ID_LOTE AND
  LOTES_JUGO.ID_ARTICULO = TAMBORES_INDUSTRIA.ID_ARTICULO - 900 NO-LOCK:
  DISP LOTES_JUGO.ID_ARTICULO LOTES_JUGO.ID_LOTE LOTES_JUGO.FECHA.
  FOR EACH TB OF LOTES_JUGO NO-LOCK:
    FIND COMERCIAL.SUCURSAL WHERE COMERCIAL.SUCURSAL.ID_SUCURSAL = TB.ID_SUCURSAL_UBICACION.
    DISP TB.ID_TAMBOR TB.ID_SUCURSAL TB.ID_SUCURSAL_UBICACION 
         TB.ID_ARTICULO COMERCIAL.SUCURSAL.NOMBRE.
  END.
END.
